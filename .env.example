# ============================================
# CCL English Assessment Platform
# Environment Configuration Template
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# APPLICATION SETTINGS
# ============================================
DEBUG=false
HOST=127.0.0.1
PORT=8000

# ============================================
# SECURITY (REQUIRED - NO DEFAULTS)
# ============================================
# Generate a secure secret key using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-generate-using-command-above

# For production, set these to true when using HTTPS
SESSION_SECURE_COOKIE=false
CSRF_COOKIE_SECURE=false

# Admin API key for question bank management
ADMIN_API_KEY=your-admin-api-key-here

# ============================================
# CORS ALLOWED ORIGINS
# ============================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:8000,http://127.0.0.1:8080

# ============================================
# DATABASE (REQUIRED - NO DEFAULT)
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:your-password@localhost:5432/english_assessment

# ============================================
# AI SERVICES (OPTIONAL)
# ============================================
# OpenAI API key for speech analysis and AI features
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API key (alternative to OpenAI)
ANTHROPIC_API_KEY=your-anthropic-key-here

# ============================================
# REDIS (OPTIONAL - DEFAULTS PROVIDED)
# ============================================
# Redis URL for caching and sessions
REDIS_URL=redis://localhost:6379

# Celery broker and result backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================
# FILE STORAGE
# ============================================
AUDIO_UPLOAD_DIR=data/audio
STATIC_FILES_DIR=static

# ============================================
# ASSESSMENT SETTINGS (OPTIONAL - DEFAULTS PROVIDED)
# ============================================
LISTENING_DURATION_SECONDS=40
SPEAKING_MAX_DURATION_SECONDS=20
TIME_NUMBERS_DURATION_SECONDS=10

# ============================================
# SCORING THRESHOLDS
# ============================================
PASS_THRESHOLD_TOTAL=70
PASS_THRESHOLD_SAFETY=0.8
PASS_THRESHOLD_SPEAKING=12

# ============================================
# SESSION MANAGEMENT
# ============================================
SESSION_TIMEOUT_SECONDS=14400
SESSION_WARNING_SECONDS=300
SESSION_ROTATION_INTERVAL=1800

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_AUTH=5
RATE_LIMIT_AUTH_WINDOW=300

# ============================================
# SECURITY HEADERS
# ============================================
SECURITY_HEADERS_ENABLED=true
INPUT_VALIDATION_ENABLED=true

# ============================================
# FILE UPLOAD LIMITS
# ============================================
MAX_REQUEST_SIZE=10485760
MAX_UPLOAD_SIZE=52428800
